@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5 class="card-title">Total Employees</h5>
                <h2 class="card-text">@ViewBag.TotalEmployees</h2>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5 class="card-title">Total Departments</h5>
                <h2 class="card-text">@ViewBag.TotalDepartments</h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 mb-4">
        <div class="card">
            <div class="card-header">
                <h5>Department-wise Employee Distribution</h5>
            </div>
            <div class="card-body">
                <canvas id="departmentDistributionChart" height="300"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Department Distribution Chart
        var ctx = document.getElementById('departmentDistributionChart').getContext('2d');
        var departmentDistributionChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['HR', 'IT', 'Finance', 'Operations', 'Marketing'],
                datasets: [{
                    label: 'Employees',
                    data: [15, 30, 12, 25, 18],
                    backgroundColor: 'rgba(54, 162, 235, 0.7)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    },
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}