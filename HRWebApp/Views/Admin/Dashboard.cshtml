@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5 class="card-title">Total Employees</h5>
                <h2 class="card-text">@ViewBag.TotalEmployees</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5 class="card-title">Total Departments</h5>
                <h2 class="card-text">@ViewBag.TotalDepartments</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5 class="card-title">Total Products</h5>
                <h2 class="card-text">@ViewBag.TotalProducts</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <h5 class="card-title">Active Users</h5>
                <h2 class="card-text">@ViewBag.ActiveUsers</h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5>Employee Joinings Over Time</h5>
            </div>
            <div class="card-body">
                <canvas id="employeeJoiningsChart" height="300"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5>Department-wise Employee Distribution</h5>
            </div>
            <div class="card-body">
                <canvas id="departmentDistributionChart" height="300"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Employee Joinings Chart
        var ctx1 = document.getElementById('employeeJoiningsChart').getContext('2d');
        var employeeJoiningsChart = new Chart(ctx1, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                datasets: [{
                    label: 'Employee Joinings',
                    data: [5, 8, 6, 10, 7, 12, 15, 9, 11, 8, 6, 4],
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Department Distribution Chart
        var ctx2 = document.getElementById('departmentDistributionChart').getContext('2d');
        var departmentDistributionChart = new Chart(ctx2, {
            type: 'pie',
            data: {
                labels: ['HR', 'IT', 'Finance', 'Operations', 'Marketing'],
                datasets: [{
                    label: 'Employees',
                    data: [15, 30, 12, 25, 18],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(153, 102, 255, 0.7)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'right',
                    },
                }
            }
        });
    </script>
}