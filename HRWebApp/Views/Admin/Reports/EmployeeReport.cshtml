@model IEnumerable<HRWebApp.DTOs.EmployeeReportDTO>

@{
    ViewData["Title"] = "Employee Report";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Employee Report</h2>
    <a asp-action="ExportEmployeeReportToExcel" class="btn btn-success">Export to Excel</a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Full Name</th>
                    <th>Department</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Joining Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EmployeeId</td>
                        <td>@item.FullName</td>
                        <td>@item.Department</td>
                        <td>@item.Role</td>
                        <td>@item.Status</td>
                        <td>@item.JoiningDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>