@model IEnumerable<HRWebApp.DTOs.DepartmentDetailDTO>

@{
    ViewData["Title"] = "Departments";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Departments</h2>
    <a asp-action="CreateDepartment" class="btn btn-primary">Add New Department</a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Manager</th>
                    <th>Employees</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.ManagerName</td>
                        <td>@item.EmployeeCount</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="EditDepartment" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <form asp-action="DeleteDepartment" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this department?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>