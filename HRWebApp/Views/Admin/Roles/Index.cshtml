@model IEnumerable<HRWebApp.DTOs.RoleDetailDTO>

@{
    ViewData["Title"] = "Roles";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Roles</h2>
    <a asp-action="CreateRole" class="btn btn-primary">Add New Role</a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Users</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.UserCount</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="EditRole" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <form asp-action="DeleteRole" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this role?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>