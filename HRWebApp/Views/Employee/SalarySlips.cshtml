@model IEnumerable<HRWebApp.DTOs.SalarySlipDTO>

@{
    ViewData["Title"] = "Salary Slips";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Salary Slips</h2>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Month/Year</th>
                    <th>Basic Salary</th>
                    <th>Allowances</th>
                    <th>Deductions</th>
                    <th>Net Salary</th>
                    <th>Download</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MonthYear</td>
                        <td>@item.BasicSalary.ToString("C")</td>
                        <td>@item.TotalAllowances.ToString("C")</td>
                        <td>@item.TotalDeductions.ToString("C")</td>
                        <td>@item.NetSalary.ToString("C")</td>
                        <td>
                            <a href="@item.DownloadLink" class="btn btn-sm btn-primary">Download PDF</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>